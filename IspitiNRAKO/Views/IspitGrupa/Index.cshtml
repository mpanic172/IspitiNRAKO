@model IEnumerable<IspitiNRAKO.IspitGrupa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grupe korisnika za ispite</h2>

<p>
    @Html.ActionLink("Dodaj ispit grupi", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Grupa
        </th>
        <th>
            Ispit
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Grupa.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ispit.Naziv)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.IdIspitGrupa }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.IdIspitGrupa })
        </td>
    </tr>
}

</table>
